{
  "compilerOptions": {
    "lib": ["es2018", "es2019", "es2020", "es5"],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "typeRoots": ["./src/types"],
  "exclude": ["./node_modules/**/*", "./dist/**/*"],
  "include": ["src/**/*"]
}
